# ==============================================
# SHORTLINKS - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# ----------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3000

# ----------------------------------------------
# DATABASE - MongoDB
# ----------------------------------------------
MONGODB_URI=mongodb://admin:admin123@localhost:27017/tinyurl?authSource=admin
MONGO_USER=admin
MONGO_PASSWORD=admin123
MONGO_DB_NAME=tinyurl

# ----------------------------------------------
# CACHE - Redis
# ----------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ----------------------------------------------
# AUTHENTICATION - JWT
# ----------------------------------------------
# IMPORTANT: Generate strong secrets in production
# Example: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ----------------------------------------------
# EMAIL SERVICE (SMTP)
# ----------------------------------------------
# For development, you can use Mailtrap, Gmail, or SendGrid
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@tinyurl.com
EMAIL_FROM_NAME=Shortlinks

# ----------------------------------------------
# OAUTH - Google Authentication
# ----------------------------------------------
# Get credentials: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ----------------------------------------------
# OAUTH - GitHub Authentication
# ----------------------------------------------
# Get credentials: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ----------------------------------------------
# PAYMENT GATEWAY - 2Checkout (Optional)
# ----------------------------------------------
# Get credentials: https://www.2checkout.com/
TWOCHECKOUT_MERCHANT_CODE=your-merchant-code
TWOCHECKOUT_SECRET_KEY=your-secret-key
TWOCHECKOUT_SANDBOX=true

# ----------------------------------------------
# RATE LIMITING
# ----------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------
# LINK SHORTENING
# ----------------------------------------------
SHORT_URL_LENGTH=7
CUSTOM_DOMAIN_ENABLED=true
DEFAULT_DOMAIN=localhost:3000

# ----------------------------------------------
# ANALYTICS
# ----------------------------------------------
ANALYTICS_RETENTION_DAYS=90
TRACK_USER_AGENT=true
TRACK_REFERRER=true
TRACK_LOCATION=true

# ----------------------------------------------
# FILE UPLOAD (QR Codes, etc)
# ----------------------------------------------
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/png,image/jpeg,image/jpg

# ----------------------------------------------
# SECURITY
# ----------------------------------------------
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# ----------------------------------------------
# LOGGING
# ----------------------------------------------
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# ----------------------------------------------
# SESSION
# ----------------------------------------------
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ----------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_CUSTOM_DOMAINS=true
ENABLE_QR_CODES=true
ENABLE_ANALYTICS=true

# ----------------------------------------------
# ADMIN
# ----------------------------------------------
ADMIN_EMAIL=admin@tinyurl.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ----------------------------------------------
# THIRD-PARTY SERVICES (Optional)
# ----------------------------------------------
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Cloudflare (for CDN and DDoS protection)
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ZONE_ID=your-zone-id

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tinyurl-uploads
